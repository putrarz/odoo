<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
    <record id="wizard_sync_product_form" model="ir.ui.view">
        <field name="name">wizard.form.sync.product</field>
        <field name="model">sync.product.accpacc</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Form Requests Limit &amp; Offset API">
                <group string="Form Requests Limit &amp; Offset API">
                    <group>
                        <field name="limit"/>
                    </group>
                    <group>
                        <field name="offset"/>
                    </group>
                </group>
                <footer>
                    <button name="action_sync_product_from_accpacc" type="object" string="Sync Product" class="oe_highlight"/>
                     or
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="wizard_sync_product_action" model="ir.actions.act_window">
        <field name="name">Action Wizard Sync Product</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sync.product.accpacc</field>
        <field name="view_mode">form</field>
        <field name="view_type">form</field>
        <field name="view_id" ref="wizard_sync_product_form"/>
        <field name="target">new</field>
    </record>

</odoo>